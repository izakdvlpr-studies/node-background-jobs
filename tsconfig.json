  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES6", "ES2016", "ES2019", "ES2020", "ESNext"],
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@config/*": ["config/*"]
    }
  }, 
  "exclude": ["**/*.js", "dist", "node_modules"],
  "include": ["src/**/*"]
}
